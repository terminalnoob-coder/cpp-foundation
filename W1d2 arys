
 #include<iostream>
 #include<iomanip>
 using namespace std;
 int main(){
   int n;
   cin>>n;
   int arr[n];
   for(int i =0;i<n;i++)
    cin>>arr[i];
    int l=0;
    for(int k=0;k<n;k++){
      l=l+arr[k];
    }
    cout<<std::fixed;
    cout<<std::setprecision(2);
    float avg=(float)l/n;
    cout<<avg;
 }
